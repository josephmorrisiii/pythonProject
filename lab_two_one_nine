if __name__ == '__main__':
#Part 1
   lemon_juice_cups = float(input('Enter amount of lemon juice (in cups):\n'))
   water_cups = float(input('Enter amount of water (in cups):\n'))
   agave_nectar_cups = float(input('Enter amount of agave nectar (in cups):\n'))
   number_of_servings = int(input('How many servings does this make?\n'))
number_of_servings_float = '{:.2f}'.format(number_of_servings)
print()
print('Lemonade ingredients - yields', number_of_servings_float, 'servings')
print('{:.2f}'.format(lemon_juice_cups), 'cup(s) lemon juice')
print('{:.2f}'.format(water_cups), 'cup(s) water')
print('{:.2f}'.format(agave_nectar_cups), 'cup(s) agave nectar')
print()
# FIXME (2): Prompt user for desired number of servings. Convert and output the ingredients

how_many_servings = int(input('How many servings would you like to make?\n'))
print()
how_many_servings_float = '{:.2f}'.format(how_many_servings)

print('Lemonade ingredients - yields', how_many_servings_float, 'servings')
number_of_servings_float = float(how_many_servings_float) / float(number_of_servings_float)
lemon_juice_cups = lemon_juice_cups * number_of_servings_float
water_cups = water_cups * number_of_servings_float
agave_nectar_cups = agave_nectar_cups * number_of_servings_float

print('{:.2f}'.format(lemon_juice_cups), 'cup(s) lemon juice')
print('{:.2f}'.format(water_cups), 'cup(s) water')
print('{:.2f}'.format(agave_nectar_cups), 'cup(s) agave nectar')
print()
print('Lemonade ingredients - yields', how_many_servings_float, 'servings')
lemon_juice_cups = lemon_juice_cups / 16
water_cups = water_cups / 16
agave_nectar_cups = agave_nectar_cups / 16
print('{:.2f}'.format(lemon_juice_cups), 'gallon(s) lemon juice')
print('{:.2f}'.format(water_cups), 'gallon(s) water')
print('{:.2f}'.format(agave_nectar_cups), 'gallon(s) agave nectar')






