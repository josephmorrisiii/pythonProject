if __name__ == '__main__':

    print("Lets determine if it is your birthday!\n")
current_month = str(input('Please enter the current month using a single digit '))
current_day = str(input('Please enter the current numerical day '))
current_year = str(input("Please enter the numerical year"))
print()
birthday_month = str(input('Please enter the birthday month using a single digit '))
birthday_day = str(input('Please enter the birthday day using a single digit '))
birthday_year = str(input('Please enter the birthday year using a single digit '))
print()
print('Birthday Calculator: \n')
print("Current Day")
print('Month: ', current_month)
print("Day: ", current_day)
print('Year: ', current_year)
print("Birthday")
print('Month: ', birthday_month)
print("Day: ", birthday_day)
print('Year: ', birthday_year)

current_date = current_month + current_day
birthday_date = birthday_month + birthday_day

if current_date == birthday_date:
    print("Happy Birthday")
    current_year_int = int(current_year)
    birthday_year_int = int(birthday_year)
    users_age = current_year_int - birthday_year_int
    print("You are ", users_age, ' years old today')


